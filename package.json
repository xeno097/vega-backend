{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "A template for building nodejs apllications using express and ts",
  "main": "index.js",
  "scripts": {
    "start:dev": "ts-node-dev --poll src/index.ts",
    "start": "tsc && node dist/index.js",
    "db:init": "ts-node src/knex/init.ts",
    "test": "jest --watchAll --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.test.ts"
    ]
  },
  "author": "xeno097 & Bujosa",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.11",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.18",
    "pg": "^8.5.1",
    "socket.io": "^3.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1"
  }
}
